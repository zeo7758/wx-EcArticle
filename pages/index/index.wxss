
.swiper{
    width:100%;
    height: 360rpx;
}
.swiper image{
    width: 100%
}
.swiper-items{
    width: 100%;
}
.swiper-wrap{
    width:100%;
    height:auto;
}
.articleType{
    width:120rpx;
    color:#fff;
    display:inline-block;
    text-align:center;
    border-radius: 6rpx;
    font-size: 12px;
    line-height: 16px;
    margin-right: 12rpx;
}
.list-item{
    border-bottom: 1px solid #f6f7f8;
    margin:0 32rpx;
}
.list-title{
    font-weight: 300;
    color:#000;
    font-size: 16px;
}
.list-content{
    color:#8d8d8d;
    font-size: 12px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin: 20rpx 0;
}
.username{
    font-size: 12px;
    color:#8d8d8d;
}
