.login-wrap{
  background-color: #f6f8f9;
  margin-bottom: 20rpx
}
.login-bar{
  width: 100%;
  height: 200rpx;
  display:flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solod  #f6f7f8;
  background: #fff;
}
.arrow-img{
 width: 20rpx;
  height: 40rpx;
}
.login-txt{
  font-size:18px;
}
.container{
    padding-top: 20rpx;
    background: #f7f7f7;
    height: 100%;
    width: 100%;
}
.wrapper {
  padding-top: 20rpx;
}
.profile {
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 40rpx;
}
.profile .info {
  display: flex;
  flex: 1;
  font-size: 24rpx;
  color: #abb4bf;
}
.profile .name {
  font-size: 40rpx;
  color: #333;
}
.profile .info .text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 20rpx;
  height: 40rpx;
}
.profile .more .reddot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5959;
  margin-right: 10rpx;
}
